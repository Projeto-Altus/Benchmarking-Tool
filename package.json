{
  "name": "altus-benchmarking-pro",
  "version": "1.0.1",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.altus.benchmarking",
    "productName": "Altus Benchmarking Pro",
    "directories": {
      "output": "dist_electron",
      "app": "."
    },
    "files": [
      "index.js",
      "APP/dist/**/*",
      "package.json",
      "!FINAL_SUBMISSION/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/app.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Altus Benchmarking Pro"
    },
    "extraResources": [
      { "from": "resources/backend/api_backend.exe", "to": "backend/api_backend.exe" },
      { "from": "assets", "to": "assets" },
      { "from": "resources/playwright", "to": "playwright" }
    ]
  }
}